										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
										<g> </g>
									</svg>
								</button>
								<div class="ml-6 flex-1">
									Stack Tecnologias
								</div>
							</div>
						</div>
					</div>
				</section>
			</article>
		</div>

		<footer
			class="mt-20 bg-[#293342] w-full h-[100px] grid place-content-center"
		>
			<span>Copyright © 2023 - Brian Martinez</span>
		</footer>
	</main>
</Layout>
